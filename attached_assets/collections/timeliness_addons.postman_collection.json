{
  "info": {
    "name": "Timeliness Addons (Escalation + Digest + SLA)",
    "_postman_id": "8b7f2e5d-1234-4567-89ab-aaaaaaaaaaaa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Escalations (run now)",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{BASE_URL}}/api/dev/run-escalations",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "dev",
            "run-escalations"
          ]
        }
      }
    },
    {
      "name": "Weekly Digest (run now)",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{BASE_URL}}/api/dev/run-weekly-digest",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "dev",
            "run-weekly-digest"
          ]
        }
      }
    },
    {
      "name": "Get SLA (project)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/api/sla/projects/:projectId",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "sla",
            "projects",
            ":projectId"
          ]
        }
      }
    },
    {
      "name": "Set SLA (project)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"atRiskMinutes\":45,\"redMinutes\":90}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/sla/projects/:projectId",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "sla",
            "projects",
            ":projectId"
          ]
        }
      }
    },
    {
      "name": "Score SLA (item)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/api/sla/items/:itemId/score",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "sla",
            "items",
            ":itemId",
            "score"
          ]
        }
      }
    }
  ]
}