{
  "info": {
    "name": "Field-Friendly Manager APIs",
    "_postman_id": "4b1f1e1b-1111-2222-3333-444444444444",
    "description": "Plain-language endpoints for schedule health and CSV export.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Schedule Health (overview)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/api/manager/overview?days=30",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "manager",
            "overview"
          ],
          "query": [
            {
              "key": "days",
              "value": "30"
            }
          ]
        }
      }
    },
    {
      "name": "Export CSV (plain language)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/api/manager/export-friendly.csv?days=30",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "manager",
            "export-friendly.csv"
          ],
          "query": [
            {
              "key": "days",
              "value": "30"
            }
          ]
        }
      }
    }
  ]
}